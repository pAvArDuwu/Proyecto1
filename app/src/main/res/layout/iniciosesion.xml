<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/topContainer"
        android:layout_width="420dp"
        android:layout_height="300dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="397dp"
            android:layout_height="381dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/isologo1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContainer">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Iniciar Sesión"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campo correo -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/inicio_sesion"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- Campo contraseña -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/inicio_sesion"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Enlace registrarse -->
        <TextView
            android:id="@+id/registerLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="24dp"
            android:text="¿No tienes cuenta? Regístrate"
            android:textColor="#1E88E5"
            android:textStyle="bold" />

        <!-- Íconos sociales en línea -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- Facebook -->
            <ImageButton
                android:id="@+id/facebookIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:contentDescription="Facebook"
                android:scaleType="centerInside"
                android:src="@drawable/ic_facebook1" />

            <!-- Google -->
            <ImageButton
                android:id="@+id/googleIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:contentDescription="Google"
                android:scaleType="centerInside"
                android:src="@drawable/ic_google" />

            <!-- Apple -->
            <ImageButton
                android:id="@+id/appleIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_button_bg"
                android:contentDescription="Apple"
                android:scaleType="centerInside"
                android:src="@drawable/ic_apple" />
        </LinearLayout>

        <!-- Botón Iniciar Sesión (último) -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:padding="12dp"
            android:text="Iniciar Sesión"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>